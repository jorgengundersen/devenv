# Project-specific Development Environment
# Extends the base devenv with project-specific dependencies

FROM devenv:latest

USER root

# Install project-specific dependencies here
# Example:
# RUN apt-get update && apt-get install -y \
#     <your-dependencies> \
#     && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspaces/project

# Change ownership
RUN chown -R devuser:devuser /workspaces

USER devuser

# Default command
CMD ["/bin/bash"]
